            new Product { Id = 12, Name = "Vintage Watch", Description = "Classic timepiece with modern functionality.", Price = 249.99m, ImageUrl = "https://images.unsplash.com/photo-1524592094714-0f0654e20314?ixlib=rb-4.0.3&auto=format&fit=crop&w=500&q=80", IsOnSale = false, IsNew = false, Category = "accessories", Stock = 5 }
